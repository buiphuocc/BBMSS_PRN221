@page
@model BBMSRazorPages.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css"> *@
</head>
<body>


    <h1 style="margin-bottom:30px" class="text-center">Dashboard</h1>

    <div class="row" style="text-align:center">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Bookings</h5>
                    <p class="card-text">@Model.Bookings.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Courts</h5>
                    <p class="card-text">@Model.Courts.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Pending Payments</h5>
                    <p class="card-text">fix</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Cancelled Bookings</h5>
                    <p class="card-text">fix</p>
                </div>
            </div>
        </div>

    </div>

    <h2>Booking Logs</h2>

    @if (Model.Bookings.Count == 0)
    {
        <p>You have no bookings.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Court Name</th>
                    <th>Booking Date</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Services</th>
                    <th>Payment Method</th>
                    <th>Total Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.BookingId</td>
                        <td>@booking.Court.CourtName</td>
                        <td>@booking.BookingDate.ToShortDateString()</td>
                        <td>@booking.StartTime</td>
                        <td>@booking.EndTime</td>
                        <td>
                            @foreach (var service in Model.GetBookingServicesByBookingId(booking.BookingId))
                            {
                                <ul>
                                    <li>@service.Service.ServiceName - Quantity: @service.Quantity</li>
                                </ul>
                            }
                        </td>
                        <td>@booking.PaymentMethod</td>
                        <td>@booking.TotalPrice</td>
                        <td>
                            @{
                                if (string.IsNullOrEmpty(booking.Status))
                                {
                                    <text>Pending</text>
                                }
                                else
                                {
                                    @booking.Status
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>
