@page
@model BBMSRazorPages.Pages.Authentication.RegistrationModel
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BBMSRazorPages.styles.css" asp-append-version="true" />
    <link rel="icon" href="/images/shuttlecock.png" type="image/png">
    <style>
        body {
            background: url('https://plus.unsplash.com/premium_photo-1677543938005-6e0eb736dc19?fm=jpg&w=3000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmFkbWludG9ufGVufDB8fDB8fHww') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
</head>

<!------ Include the above in your HEAD tag ---------->

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card mb-0" style="max-width: 300px;">
        <div class="card-body p-3 p-md-4 p-xl-5">

            <div class="text-center mb-3" style="font-size: x-large">
                <img src="~/images/shuttlecock.png" alt="BBMS Icon" width="40" height="40" class="d-inline-block align-middle">
                BBMS
            </div>

            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Registration</h2>
            @* <p style="color: red">@TempData["InvalidData"]</p> *@
            <form method="post">
                <div class="row gy-2 overflow-hidden">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" placeholder="User Name" required asp-for="User.Username">
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                            <label for="username" class="form-label">User Name</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" value="" placeholder="Password" required asp-for="User.Password">
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                            <label for="password" class="form-label">Password</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" value="" placeholder="Email" required asp-for="User.Email">
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                            <label for="password" class="form-label">Email</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="phone" value="" placeholder="Phone" required asp-for="User.Phone">
                            <span asp-validation-for="User.Phone" class="text-danger"></span>
                            <label for="phone" class="form-label">Phone</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-grid my-3">
                            <button class="btn btn-primary btn-lg" type="submit">Create</button>
                            <input asp-for="User.Role" class="form-control" type="hidden" value="Customer" />
                            <a href="/Index" class="text-center">Back to Home</a>
                        </div>
                    </div>
                    <div class="col-12">
                    </div>
                </div>
            </form>
            @if (Request.Query.ContainsKey("handler"))
            {
                string handlerValue = Request.Query["handler"];
                <p>Login failed: @handlerValue</p>
            }
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}