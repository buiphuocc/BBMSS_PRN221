@page
@model BBMSRazorPages.Pages.Authentication.LoginModel
@{
    Layout = null;
}


<head>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('https://plus.unsplash.com/premium_photo-1677543938005-6e0eb736dc19?fm=jpg&w=3000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmFkbWludG9ufGVufDB8fDB8fHww') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
</head>

<!------ Include the above in your HEAD tag ---------->

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card mb-0" style="max-width: 300px;">
        <div class="card-body p-3 p-md-4 p-xl-5">

            <div class="text-center mb-3" style="font-size:x-large">
                BBMS
            </div>
            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Sign in to your account</h2>
            <form method="post">
                <div class="row gy-2 overflow-hidden">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" placeholder="User Name" required asp-for="@Model.LoginUser.Username">
                            <label for="username" class="form-label">User Name</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" value="" placeholder="Password" required asp-for="@Model.LoginUser.Password">
                            <label for="password" class="form-label">Password</label>
                        </div>
                    </div>
                    <div class="col-12">
                    </div>
                    <div class="col-12">
                        <div class="d-grid my-3">
                            <button class="btn btn-primary btn-lg" type="submit">Log in</button>
                            <a href="/Index" class="text-center">Back to Home</a>
                        </div>
                    </div>
                    <div class="col-12">
                    </div>
                </div>
            </form>
            @if (Request.Query.ContainsKey("handler"))
            {
                string handlerValue = Request.Query["handler"];
                <p>Login failed: @handlerValue</p>
            }
        </div>
    </div>
</div>
