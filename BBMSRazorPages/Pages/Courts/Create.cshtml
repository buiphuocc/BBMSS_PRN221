@page
@model BBMSRazorPages.Pages.Courts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Court</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Court.CourtName" class="control-label"></label>
                <input asp-for="Court.CourtName" class="form-control" required/>
                <span asp-validation-for="Court.CourtName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.PricePerHour" class="control-label"></label>
                <input type="number" asp-for="Court.PricePerHour" class="form-control" required min="30000" value="30000"/>
                <span asp-validation-for="Court.PricePerHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
